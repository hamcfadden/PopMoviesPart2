<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="review" type="com.udacity.heather.popmoviesstage1final.Models.ReviewItem" />
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/detail_padding"
        android:paddingStart="@dimen/detail_padding"
        android:paddingRight="@dimen/detail_padding"
        android:paddingEnd="@dimen/detail_padding">

        <TextView
            android:id="@+id/tv_item_review_author"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="author name here"/>

        <TextView
            android:id="@+id/tv_item_review_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:paddingLeft="@dimen/detail_padding"
            android:paddingStart="@dimen/detail_padding"
            android:paddingRight="@dimen/detail_padding"
            android:paddingEnd="@dimen/detail_padding"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_item_review_author"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="review content here"/>

    </android.support.constraint.ConstraintLayout>
</layout>